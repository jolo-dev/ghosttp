{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingComma": "all",
			"indentStyle": "space",
			"lineWidth": 100
		}
	},
	"files": {
		"include": [
			"src/**/*.ts",
			"index.ts"
		]
	}
}